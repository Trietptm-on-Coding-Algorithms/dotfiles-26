## ---------- FONT SETUP ---------- #
URxvt.font: 				xft:Hack-Regular:regular:pixelsize=14:antialias=true:hinting=true,\
                            xft:NotoSans\Regular:pixelsize=14:antialias=true:hinting=true,\
URxvt.boldFont:            	xft:Hack-Regular:regular:pixelsize=14:bold:antialias=true:hinting=true,\
URxvt.italicFont:          	xft:Hack-Regular:regular:pixelsize=14:italic:antialias=true:hinting=true,\
URxvt.boldItalicFont:      	xft:Hack-Regular:regular:pixelsize=14:bold:italic:antialias=true:hinting=true
##URxvt.letterSpace:         -1

## ---------- PADDING IN TERMINAL WINDOW ---------- #
URxvt.internalBorder:      5
URxvt.externalBorder:      5

## adv tabs
URxvt.tabbed.new-button: false

## removes vertical scroll bar
URxvt.scrollBar:           false

## enables cursor blinking
URxvt.cursorBlink: 1

## trying to fix glyph support
URxvt.letterSpace: true

##URxvt*fading:              30

## extensions for font resizing and tabs
URxvt.perl-ext-common:     matcher,resize-font,tabbdex,bell-command
URxvt.bell-command: notify-send "Terminal: Bell Sounded"

## cursor size
Xcursor.size: 32

