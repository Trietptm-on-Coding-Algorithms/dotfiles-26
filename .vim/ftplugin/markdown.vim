set shiftwidth=2                " set indentation depth to 2 columns
set softtabstop=2               " backspace over spaces as tabs
set tabstop=2                   " set tabulator length to 2 columns

set spell
set dictionary+=/usr/share/dict/words
set complete=k

" Headers
nnoremap <Leader>h1 ^i#<Space><Esc>^
nnoremap <Leader>h2 ^i##<Space><Esc>^
nnoremap <Leader>h3 ^i###<Space><Esc>^
nnoremap <Leader>h4 ^i####<Space><Esc>^

" Lists
nnoremap <Leader>bul ^i*<Space><Esc>^
