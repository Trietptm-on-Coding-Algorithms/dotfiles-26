source "gpg2 -dq $HOME/.pswds.gpg |"

set my_name="Callum Warrilow"

set folder= "imaps://mail.privateemail.com:993"
set spoolfile= +INBOX

# user info
set imap_user="callum@oakular.com"
set imap_pass=$my_email_pass
# mutt checks regularly for all mail
set imap_check_subscribed

# smtp setup for sending emails
set realname= "Callum Warrilow"
set from="callum@oakular.com"
set use_from= yes

set smtp_url="smtps://$imap_user:$imap_pass@mail.privateemail.com:465"
set ssl_force_tls = yes

# save sent emails to sent folder on server
set record = +Sent

# order mail in descending order
# show most recent mail in a thread on top
set sort=threads
set sort_browser=reverse-date
set sort_aux=reverse-last-date-received
# -*-muttrc-*-

# Palette for use with the Linux console.  Black background.

color hdrdefault blue black
color quoted blue black
color signature blue black
color attachment red black
color prompt brightmagenta black
color message brightred black
color error brightred black
color indicator black red
color status brightgreen blue
color tree white black
color normal white black
color markers red black
color search white black
color tilde brightmagenta black
color index blue black ~F
color index red black "~N|~O"

